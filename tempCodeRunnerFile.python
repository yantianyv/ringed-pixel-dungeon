import random

def simulate_ring_level(num_simulations=1000000):
    levels = []
    for _ in range(num_simulations):
        n = 0
        while random.randint(0, n + 4) <= 3:
            n += 1
        levels.append(n+2)
    return sum(levels) / len(levels)

# 运行模拟
expected_level = simulate_ring_level()
print(f"Expected level of the ring: {expected_level}")
